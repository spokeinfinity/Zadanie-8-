<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/sensor_details">

    <TextView
        android:id="@+id/details_sensor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_sensor_name"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/details_margin"
        android:layout_marginRight="@dimen/details_margin"
        android:layout_marginBottom="@dimen/details_margin"
        android:textSize="@dimen/details_name_text_size" />

    <TextView
        android:id="@+id/details_sensor_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_sensor_value"
        android:layout_marginLeft="@dimen/details_margin"
        android:layout_marginRight="@dimen/details_margin"
        android:textSize="@dimen/details_value_text_size" />
</LinearLayout>